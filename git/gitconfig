    di = diff
    did = diff develop upstream/develop
    dt = difftool

    fl = flow
    fi = flow init
    fli = flow init
    flfs = flow feature start
    flff = flow feature finish
    flrs = flow release start
    flrf = flow release finish
    fs = flow feature start
    frs = flow release start
    frf = flow release finish
    ff = flow feature finish

    ft = fetch
    fto = fetch origin
    ftu = fetch upstream
    fto = fetch origin

    info = remote -v

    last = log -1 HEAD

    l = log --oneline --decorate -12 --color
    lc = log --graph --color
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    ll = log --oneline --decorate --color

    mg = merge
    mgnf = merge --no-ff
    md = merge --no-ff develop
    mnf = merge --no-ff

    pick = cherry-pick
    pin = stash
    pl = pull
    plr = pull --rebase
    pop = stash pop
    pru = pull --rebase upstream
    pro = pull --rebase origin
    ps = push
    pu = push
    pud = pull upstream develop
    pum = pull upstream master
    pom = push origin master
    pod = push origin develop

    rb = rebase
    rbc = rebase --continue
    rbd = rebase -i develop
    rbi = rebase -i HEAD~

    reset = reset HEAD --
    recent = log -5 HEAD

    sbi = submodule init
    sbu = submodule update
    sbp = submodule foreach git pull
    sbc = submodule foreach git co master
    st = status

    trace = update-index --no-assume-unchanged
    untrace = update-index --assume-unchanged

    unstage = reset HEAD --
    us = reset HEAD --

    last = log -1 HEAD
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

