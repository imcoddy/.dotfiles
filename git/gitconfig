[alias]
    amend = commit --amend
    ap = commit --amend
    append = commit --amend
    br = branch

    ci = commit
    cm = commit -a -m
    cma = commit --amend

    co = checkout
    com = checkout master
    cod = checkout develop
    cof = checkout feature
    cob = checkout bugfix
    cor = checkout release

    df = diff
